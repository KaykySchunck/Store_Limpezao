{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "cd storeAPI && npm install && npm run build"
  },
  "deploy": {
    "startCommand": "cd storeAPI && npm start",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10,
    "watchPatterns": [
      "storeAPI/**"
    ]
  }
}

